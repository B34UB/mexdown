\newcommand{\printfirstname}{\@firstname}
\newcommand{\printlastname}{\@lastname}

% address
% usage: \address{<street>}{<street number>}{<zip code>}{<city>}{<state>}{<country>}
\renewcommand{\address}[6]{%
    \def\@street{#1}%
    \def\@streetnumber{#2}%
    \def\@zipcode{#3}%
    \def\@city{#4}%
    \def\@state{#5}%
    \def\@country{#6}%
}
\address{}{}{}{}{}{}
\newcommand{\printstreet}{\@street}
\newcommand{\printstreetnumber}{\@streetnumber}
\newcommand{\printzipcode}{\@zipcode}
\newcommand{\printcity}{\@city}
\newcommand{\printstate}{\@state}
\newcommand{\printcountry}{\@country}

% email
% usage: \email{<email address>}
%\renewcommand{\email}[1]{\def\@email{#1}}
\newcommand{\printemail}{\@email}

% homepage
\newcommand{\printhomepage}{\@homepage}

% telephone
% usage: \phone[type]{value}
% #1: optional is type phome
% #2: value
\renewcommand{\phone}[2][mobile]{
    \expandafter\def\csname#1phone\endcsname{#2}
}
% usage: \printphone[type]
\newcommand{\printphone}[1][mobile]{
    \expandafter\csname#1phone\endcsname
}

